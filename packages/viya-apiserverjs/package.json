{
  "name": "@sassoftware/viya-apiserverjs",
  "version": "1.3.0",
  "description": "Custom app server for Viya apps",
  "author": "Deva Kumaraswamy <deva.kumar@sas.com>",
  "license": "Apache-2.0",
  "main": "./lib/index.js",
  "files": [
    "lib"
  ],
  "keywords": [
    "restaf",
    "Viya",
    "SAS",
    "server",
    "RESTAPI"
  ],
  "engines": {
    "node": ">=12.14.0"
  },
  "homepage": "https://github.com/sassoftware/restaf-server#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/sassoftware/restaf-server.git"
  },
  "bin": {
    "@sassoftware/viya-apiserverjs": "./lib/cli.js"
  },
  "bugs": {
    "url": "https://github.com/sassoftware/restaf-server/issues"
  },
  "scripts": {
    "build": "rimraf lib && babel src --out-dir lib",
    "start": "node api --env=./.env --docker=./Dockerfile",
    "pub": "npm publish --tag test --access public",
    "debug": "cross-env VIYA_SERVER=%vx% node --inspect-brk api   --env=./.env --docker=./Dockerfile --appenv=appenv.js",
    "lint": "npx eslint --fix src/*.js"
  },
  "dependencies": {
    "@sassoftware/restaf": "4.0.2",
    "@sassoftware/restaflib": "4.0.2",
    "@sassoftware/viya-server-core": "1.3.0"
    
  }
}
