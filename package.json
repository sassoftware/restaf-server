{
  "name": "@sassoftware/restaf-server",
  "version": "2.0.1",
  "description": "app and api server for SAS Viya user applications",
  "main": "index.js",
  "author": "Deva Kumar",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sassoftware/restaf-server/issues"
  },
  "homepage": "https://github.com/sassoftware/restaf-server#readme",
  "scripts": {  
    "preinstall": "npx npm-force-resolutions",
    "test": "echo \"Error: no test specified\" && exit 1",


    "core:build": "cd packages/viya-server-core && npm run build",
    "appjs:build": "cd packages/viya-appserverjs && npm run build",
    "apijs:build": "cd packages/viya-apiserverjs && npm run build",


    "appjs:start": "cd packages/apptest &&  npm run start",
    "apijs:start": "cd packages/apitest && npm run start",
    "appjs:debug": "cd packages/apptest && npm run debug",
    "apijs:debug": "cd packages/apitest && npm run debug",

  
    "buildall": "npm run build -ws --if-present",

    "format": "prettier-eslint --eslint-config-path ./.eslintrc.json --write '**/*.js'",
    "lint": "eslint . --ext .js --fix"
  },
  "repository": "git+https://github.com/sassoftware/restaf-server.git",
  "keywords": [
    "REST",
    "API",
    "Viya",
    "appserver",
    "apiserver"
  ],
  "resolutions": {
    "z-schema": "5.0.3",
    "validator": "13.7.0"
  },
  "workspaces": [
    "./packages/*"
  ]
}
